{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "outDir": ".next/server",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "allowUnusedLabels": true,
    "esModuleInterop": true
  },
  "include": ["server/**/*.ts", "types"],
  "exclude": [".next"]
}
